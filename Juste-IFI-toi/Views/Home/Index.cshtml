@using Juste_IFI_toi.Models
@{
    ViewBag.Title = "Home Page";
}
<div class="row">
    <div class="col-md-1"></div>
    <div class="col-md-10">
        <h2>Top des retards</h2>
        
        @{
            if (ViewBag.listRetards != null)
            {
                foreach (Retard retard in ViewBag.listRetards)
                {
                    <div class="retard-block btn btn-dark">
                        <h4>@retard.Motif</h4>
                        <div>@retard.Date.ToShortDateString()</div>
                        <img src="@retard.Photo" alt="preuve">
                        <div>
                            by : @retard.User.pseudo
                        </div>
                        <div>
                            vote : @retard.Note
                        </div>
                        <div>
                            <!--<button accesskey="@retard.Id" onclick="Up" class="btnUp btn btn-info">+</button>-->
                            @using (Html.BeginForm("Up", "Retard"))
                            {
                                <input type="button" accesskey="@retard.Id" name="button" class="btnUp btn btn-info" value="+" />
                            }
                            <!--<button accesskey="@retard.Id" onclick="Down" class="btnDown btn btn-info">-</button>-->
                            @using (Html.BeginForm("Down", "Retard"))
                            {
                                <input type="button" accesskey="@retard.Id" name="button" class="btnDown btn btn-info" value="-" />
                            }
                        </div>
                    </div>
                }
            }
        }
    </div>
</div>